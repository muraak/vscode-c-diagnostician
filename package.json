{
	"name": "vscode-c-diagnostician",
	"description": "Compiler Customizable C Language Diagnostician",
	"author": "Muraak",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/muraak/vscode-c-diagnostician"
	},
	"publisher": "Muraak",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:c"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Compiler customizable C language diagnostician configuration",
			"properties": {
				"cccdiag.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"cccdiag.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"cccdiag.compileCommand": {
					"scope": "resource",
					"type": "string",
					"default": "gcc",
					"description": "Compile command in your environment."
				},
				"cccdiag.compileOptions": {
					"scope": "resource",
					"type": "array",
					"default": [
						"-fsyntax-only",
						"-Wall",
						"-fdiagnostics-parseable-fixits"
					]
				},
				"cccdiag.diagDelimiter": {
					"scope": "resource",
					"type": "string",
					"default": "^.+:[0-9]+:[0-9]+:"
				},
				"cccdiag.parse.diagInfoPattern": {
					"scope": "resource",
					"type": "string",
					"default": "^(.+):([0-9]+):([0-9]+):\\s*(.+):.*"
				},
				"cccdiag.parse.index.file_name": {
					"scope": "resource",
					"type": "integer",
					"default": 1
				},
				"cccdiag.parse.index.line_pos": {
					"scope": "resource",
					"type": "integer",
					"default": 2
				},
				"cccdiag.parse.index.char_pos": {
					"scope": "resource",
					"type": "integer",
					"default": 3
				},
				"cccdiag.parse.index.severity": {
					"scope": "resource",
					"type": "integer",
					"default": 4
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile:client": "tsc -p ./client/tsconfig.json",
		"compile:server": "tsc -p ./server/tsconfig.json",
		"watch:client": "tsc -w -p ./client/tsconfig.json",
		"watch:server": "tsc -w -p ./server/tsconfig.json",
		"compile": "npm run compile:client && npm run compile:server",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0",
		"typescript": "2.8.3"
	}
}
